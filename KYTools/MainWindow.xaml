<Window x:Class="KYTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KYTools"
        mc:Ignorable="d"
        Title="KYTools" Height="400" Width="260">
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0">
            <TextBlock TextWrapping="Wrap">
                KYTools make you help troubleshoot
                network infrastrucure problem
            </TextBlock>
        </Label>

        <Button Grid.Row="1" Grid.Column="0" Margin="10" x:Name="btnCidrCal" Click="ButtonOpenCidrCalculator_Click">
            CIDR Calculator
        </Button>
        <Button Grid.Row="2" Grid.Column="0" Margin="10" x:Name="btnDNSCheck" Click="ButtonDNSChecker_Click">
            DNS Checker
        </Button>
    </Grid>
</Window>
